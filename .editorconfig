# http://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{py,rst,ini}]
max_line_length = 88
indent_style = space
indent_size = 4

[*.{html,css,scss,js,jsx,ts,tsx,json,yml,xml}]
max_line_length = 80
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[Makefile]
indent_style = tab
